<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<!-- Currently supports only Aksmit spam service -->
	<name>SPAM Moderation </name>
	<author>Ashwanth Kumar</author>
	<version>alpha</version>
	<description>Allows site admins to detect any posted content for spam.</description>
	<category>service</category>
	<website>https://github.com/ashwanthkumar/spam_moderation</website>
	<license>Apache License version 2</license>
	<requires>
		<type>elgg_version</type>
		<version>2011032200</version>
	</requires>
	<!-- Mollom uses cURL -->
	<requires>
		<type>php_extension</type>
		<name>curl</name>
	</requires>
</plugin_manifest>
